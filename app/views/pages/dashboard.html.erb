  <div class="container mt-5 mr-2 text-center">
    <h4>My friends</h4>
    <% @friends.each do |friend| %>
    <div class="card" style="width: 40rem;">
      <div class="card-body">
        <h5 class="card-title"><%= friend.first_name %></h5>
      </div>
    </div>
    <% end %>
    <h4>My cars</h4>
    <% @cars.each do |car| %>
    <div class="card" style="width: 40rem;">
      <div class="card-body">
        <h5 class="card-title"><%= car.name %></h5>
      </div>
    </div>
    <% end %>
    <p><%= link_to "Back", :back %></p>
  </div>